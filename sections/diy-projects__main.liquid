<div class="w-full">
  <div class="max-w-screen-xl mx-auto px-4 lg:px-6">
    <div class="relative mb-8">
      <div class="flex items-center justify-between py-3 border-b border-gray-300">
        <h1 class="mb-0" style="font-size:18px;">{{ section.settings.title | default: 'DIY Decor & Floral Ideas' }}</h1>
        <div class="breadcrumb-wrapper uppercase flex items-center" style="font-size:10px; line-height:1.4;">
          {% render 'breadcrumbs' %}
        </div>
      </div>
    </div>

    <div vue-init v-cloak>
      <diy-projects-listing inline-template>
        <div>
          <div v-if="isLoading" class="text-center py-12">
            <p class="lead">{{ 'general.misc.loading' | t }}</p>
            <div class="loading-animation">
              <div class="bounce1"></div>
              <div class="bounce2"></div>
              <div class="bounce3"></div>
            </div>
          </div>

          <div v-else-if="error" class="text-center py-12">
            <p class="text-error">{{ error }}</p>
          </div>

          <div v-else-if="projects.length === 0" class="text-center py-12">
            <p class="lead">NO ITEMS!</p>
          </div>

          <div v-else class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
            <div v-for="project in projects" :key="project.id" class="diy-project-item">
              {% render 'diy-project-item' %}
            </div>
          </div>
        </div>
      </diy-projects-listing>

      {% if page.content != blank %}
        <div class="border-b border-gray-300 py-6 mt-10 text-center">
          <div class="sub_heading">
            <span>{{ section.settings.title | default: 'DIY Decor & Floral Ideas' }}</span>
          </div>
          <read-more :less-height="70">
            {{ page.content }}
          </read-more>
        </div>
      {% endif %}
    </div>
  </div>
</div>

<style>
  .sub_heading {
    position: relative;
    line-height: 50px;
    font-size: 20px;
    text-transform: uppercase;
    font-weight: 700;
    text-align: center;
    margin-bottom: 15px;
  }

  .sub_heading span {
    position: relative;
    padding: 0 20px;
    display: inline-block;
    background: transparent;
  }

  .sub_heading::before,
  .sub_heading::after {
    content: '';
    position: absolute;
    top: 50%;
    width: 34%;
    max-width: 480px;
    height: 2px;
    background: #e0e0e0;
  }

  .sub_heading::before {
    left: 0;
  }

  .sub_heading::after {
    right: 0;
  }
</style>

{% schema %}
  {
    "name": "DIY Projects Main",
    "tag": "section",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Title",
        "default": "DIY Decor & Floral Ideas"
      }
    ]
  }
{% endschema %}

